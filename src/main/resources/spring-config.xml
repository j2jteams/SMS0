<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
           http://www.springframework.org/schema/beans/spring-beans.xsd">

    <!-- Define a bean for StudentService -->
    <bean id="studentService" class="org.example.StudentService"/>
    <!--<bean id="employee" class="org.example.Employee"/> -->
    <bean id="course" class="org.example.Course">
        <constructor-arg value="Spring Framework Basics"/>
    </bean>

    <!-- Define Student Bean with Constructor Injection -->
    <bean id="student" class="org.example.Student">
        <constructor-arg value="John Doe"/>
        <constructor-arg value="20"/>
        <constructor-arg ref="course"/>
    </bean>
</beans>